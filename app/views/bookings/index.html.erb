<h1>Bookings for <%= @service.description %></h1>

<% if @bookings.any? %>
  <ul>
    <% @bookings.each do |booking| %>
      <li>
        <strong>Start Date:</strong> <%= booking.start_date %><br>
        <strong>End Date:</strong> <%= booking.end_date %><br>
        <strong>Message:</strong> <%= booking.message %><br>
        <strong>Status:</strong> <%= booking.status %><br>
        <%= link_to 'View', service_booking_path(@service, booking) %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No bookings found.</p>
<% end %>

<%= link_to 'Add New Booking', new_service_booking_path(@service) %> |
<%= link_to 'Back to Service Details', service_path(@service) %>
