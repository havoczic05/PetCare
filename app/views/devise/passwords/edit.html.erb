<div class="container user-container d-flex align-items-center justify-content-center mt-4">
  <div class="row justify-content-center w-100 h-100">
    <div class="col-md-5 shadow p-2 bg-white rounded">
      <h2 class="fs-1 text-center mt-3 p-3">Change your password</h2>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>

        <div class="form-inputs px-4 py-2 mx-5">
          <%= f.input :password,
                      label: "New password",
                      required: true,
                      autofocus: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      label: "Confirm your new password",
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Change my password", class: "btn btn-warning text-white" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
      </div>
    <div class="col-md-5 login-img-container shadow p-2 rounded">
    </div>
</div>

  </div>
