<h2>Add a new pet</h2>

<%= simple_form_for(@pet) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :type %>
    <%= f.input :description %>
    <%= f.input :likes %>
    <%= f.input :dislikes %>
    <%= f.input :age %>
    <%= f.input :weight %>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit %>
  </div>
<% end %>
