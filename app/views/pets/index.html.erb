<div class="container mb-5">

  <div class="text-center">
    <h1 class="m-0 pb-3">My Pets</h1>
    <%= link_to new_pet_path, class: 'mb-4 btn text-white rounded-pill px-4 py-2', style: "background-color: #FD8522;" do %>
      <i class="fa-solid fa-plus"></i> Add New Pet
    <% end %>
  </div>

  <% if @pets.any? %>
    <div class="row g-4">
      <% @pets.each do |pet| %>
        <%= render partial: "card", locals: { pet: pet } %>
      <% end %>
    </div>
  <% else %>
    <p>No pets found.</p>
  <% end %>
</div>
