<div class="container mb-5">

   <div class="d-flex justify-content-between align-items-center my-4">
    <h1 class="">My <span class="fw-bold" style= 'color: #FD8522'>Pets</span></h1>
    <%= link_to new_pet_path, class: 'mt-3 btn text-white rounded-pill px-4 py-2', style: "background-color: #FD8522;" do %>
      <i class="fa-solid fa-plus"></i> Add New Pet
    <% end %>
  </div>

  <% if @pets.any? %>
    <div class="row g-4">
      <% @pets.each do |pet| %>
        <%= render partial: "card", locals: { pet: pet } %>
      <% end %>
    </div>
  <% end %>
</div>
