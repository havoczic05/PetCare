<div class="col-md-6">
  <div class="card-container">
    <div class="row g-0 bg-orange bg-opacity-25 rounded-top-4">
      <div class="col-md-4 rounded-start-4 d-none d-md-block" style="
        background-image: url(<%= cl_image_path(pet.photo.key) %>);
        background-size: cover;
        background-position: top;">
      </div>
      <div class="col-md-8">
        <div class="card-body d-flex flex-column gap-3">
          <div class="d-flex flex-wrap justify-content-between align-items-center">
            <h4 class="card-title m-0 d-none d-md-block"><%= pet.name %></h4>
            <div class="d-flex gap-2 d-md-none">
              <%= cl_image_tag pet.photo.key, class: "card-box__thumbnail", alt: "#{pet.name}", crop: :fill %>
              <h4 class="card-title m-0"><%= pet.name %></h4>
            </div>
            <div class="d-flex gap-3">
              <%= link_to edit_pet_path(pet), class: 'card-box__btn' do %>
                <i class="fa-solid fa-pen-to-square"></i>
              <% end %>
              <%= button_to pet_path(pet), method: :delete, data: { confirm: 'Are you sure you want to delete this pet?' }, class: 'card-box__btn', form: { data: { turbo_confirm: 'Are you sure you want to delete this pet?' } } do %>
                <i class="fa-solid fa-trash"></i>
              <% end %>

            </div>
          </div>

          <div class="d-flex flex-wrap gap-3">
            <div class="card-box">
              <p class="card-box__content"><%= pet.age %> years</p>
              <p class="card-box__title">Age</p>
            </div>
            <div class="card-box">
              <p class="card-box__content"><%= pet.weight %> kg</p>
              <p class="card-box__title">Weight</p>
            </div>
            <div class="card-box">
              <p class="card-box__content"><%= pet.specie %></p>
              <p class="card-box__title">Specie</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="card-body px-md-5">
      <div>
        <h5 class="m-0 text-orange pb-1">About me</h5>
        <p class="m-0"><%= pet.description %></p>
      </div>
      <div>
        <div class="d-flex gap-2 text-orange align-items-center pb-1">
          <i class="fa-solid fa-heart"></i>
          <h6 class="m-0 "> Likes </h6>
        </div>
        <p class="m-0"><%= pet.likes %></p>
      </div>
      <div>
        <div class="d-flex gap-2 text-orange align-items-center pb-1">
          <i class="fa-solid fa-heart-crack"></i>
          <h6 class="m-0 "> Dislikes</h6>
        </div>

        <p class="m-0"><%= pet.dislikes %></p>
      </div>
    </div>
  </div>
</div>
