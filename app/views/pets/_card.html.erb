<div class="col-md-6">
  <div class="card-container h-100">
    <div class="row g-0 bg-warning bg-opacity-25 rounded-top-4">
      <% if pet.photo && pet.photo.key.present? %>
        <div class="col-md-4 rounded-start-4 d-none d-md-block" style="
          background-image: url(<%= cl_image_path(pet.photo.key) %>);
          background-size: cover;
          background-position: top;">
        </div>
      <% else %>
        <div class="col-md-4 rounded-start-4 d-none d-md-flex bg-warning justify-content-center align-items-center fs-2 text-white">
          <i class="fa-solid fa-paw"></i>
        </div>
      <% end %>
      <div class="col-md-8">
        <div class="card-body d-flex flex-column gap-3">
          <div class="d-flex flex-wrap justify-content-between align-items-center">
            <h4 class="card-title m-0 d-none d-md-block flex-grow-1 text-center"><%= pet.name %></h4>
            <div class="d-flex gap-2 d-md-none">
              <% if pet.photo && pet.photo.key.present? %>
                <%= cl_image_tag pet.photo.key, class: "card-box__thumbnail", alt: "#{pet.name}", crop: :fill %>
              <% end %>
              <h4 class="card-title m-0"><%= pet.name %></h4>
            </div>
            <div class="d-flex gap-3">
              <%= link_to edit_pet_path(pet), class: 'card-box__btn' do %>
                <i class="fa-solid fa-pen-to-square"></i>
              <% end %>
              <%= link_to pet, data: { turbo_method: :delete, bs_toggle: "modal", bs_target: "#petModal" }, class: 'px-3 text-orange', style: 'font-size: 20px;'  do %>
                <i class="fa-solid fa-trash"></i>
              <% end %>



<!-- Modal -->
                  <div class="modal fade" id="petModal" tabindex="-1" aria-labelledby="petModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title text-center" id="petModalLabel">Are you sure?</h5>
                          </div>
                          <div class="modal-body">
                            <strong><%= current_user.first_name %></strong> you're about to delete this service
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn rounded-pill btn-secondary" data-bs-dismiss="modal">Close</button>
                            <%= link_to pet, data: { turbo_method: :delete }, class: 'px-3', style: 'color: #FD8522; font-size: 24px;'  do %>
                              <span class="btn rounded-pill btn-warning text-white">Delete</span>
                            <% end %>
                        </div>
                      </div>
                    </div>
                  </div>
                <!-- Modal -->














            </div>
          </div>

          <div class="d-flex flex-wrap gap-3 justify-content-center">
            <div class="card-box">
              <p class="card-box__content"><%= pet.age %> years</p>
              <p class="card-box__title">Age</p>
            </div>
            <div class="card-box">
              <p class="card-box__content"><%= pet.weight %> kg</p>
              <p class="card-box__title">Weight</p>
            </div>
            <div class="card-box">
              <p class="card-box__content"><%= pet.specie %></p>
              <p class="card-box__title">Specie</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="card-body px-md-5 d-flex flex-column gap-2">
      <div>
        <h5 class="m-0 text-warning pb-1">About me</h5>
        <p class="m-0"><%= pet.description %></p>
      </div>
      <div>
        <div class="d-flex gap-2 text-warning align-items-center pb-1">
          <i class="fa-solid fa-heart"></i>
          <h6 class="m-0 "> Likes </h6>
        </div>
        <p class="m-0"><%= pet.likes %></p>
      </div>
      <div>
        <div class="d-flex gap-2 text-warning align-items-center pb-1">
          <i class="fa-solid fa-heart-crack"></i>
          <h6 class="m-0 "> Dislikes</h6>
        </div>

        <p class="m-0"><%= pet.dislikes %></p>
      </div>
    </div>
  </div>
</div>
