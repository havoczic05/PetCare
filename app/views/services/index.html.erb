<div class="bg-white">
  <div class="container pb-4">
    <div class="d-flex justify-content-between align-items-center my-4">
      <h1 class="text-center m-0">My offered services</h1>
      <div class="text-center">
        <%= link_to new_service_path, class: 'mt-3 btn text-white rounded-pill px-4 py-2', style: "background-color: #FD8522;" do %>
          <i class="fa-solid fa-plus"></i> Add New Service
        <% end %>
      </div>
    </div>
    <div class="row">
      <% @services.reverse.each do |service| %>
        <div class="col-lg-6">
        <div class="card-custom card bg-white shadow-lg mb-3">
          <div class="card card-body bg-white d-flex flex-row justify-content-between align-items-center">
            <p class="m-0">
            <strong style="color: #FD8522">Created at: <%= service.created_at.strftime("%B %d, %Y") %>
            </strong></p>
            <div class="d-flex">
                  <%= link_to edit_service_path(service), class: 'px-3 me-2', style: 'color: #FD8522; font-size: 24px;' do %>
                    <i class="fa-solid fa-pen-to-square"></i>
                  <% end %>

                  <%= link_to service, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'px-3', style: 'color: #FD8522; font-size: 24px;'  do %>
                    <i class="fa-solid fa-trash"></i>
                  <% end %>
                </div>
          </div>
          <div class="card card-body"  style="background-color: white;">
            <div class="row d-flex justify-content-between align-items-center">
              <div class="col-3 d-flex justify-content-center align-items-center">
                <%= cl_image_tag service.photo.key, crop: :fill, class: "w-100" %>
              </div>
              <div class="col-9 d-flex flex-column justify-content-center gap-3">
                <p class="m-0">"<%= service.description %>"</p>
                <p class="m-0"><strong>Price per day:</strong> $<%= service.price %></p>
                <p class="m-0"><strong ><i class="fa-solid fa-location-dot"></i>&nbsp; The address where you will provide the service in: </strong><%= service.address %></p>
                <p class="m-0"><strong><i class="fa-solid fa-notdef"></i>&nbsp; Your restrictions as a caregiver:</strong>&nbsp; <%= service.restrictions %></p>
                <p class="m-0"><strong><i class="fa-solid fa-house"></i>&nbsp; Your place description:</strong>&nbsp; <%= service.house_description %> </p>

              </div>
            </div>
          </div>
        </div>
        </div>
      <% end %>
    </div>


  </div>
</div>

<div class="bg-white">
  <div class="container pb-5">
    <h1 class="text-center mb-4">My hired services</h1>
    <div class="row">
      <% @bookings.reverse.each do |booking| %>
        <%= render 'bookings/booking', booking: booking %>
      <% end %>
    </div>
  </div>
</div>
