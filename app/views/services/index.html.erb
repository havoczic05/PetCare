<div class="bg-white">
  <div class="container pb-4">
    <h1 class="text-center mb-4">My offered services</h1>
     <% @services.reverse.each do |service| %>
      <div class="card-custom card bg-white shadow-lg mb-3">
        <div class="card card-body" style="background-color: white;">
          <p class="m-0"><strong style="color: #FD8522">Created at: <%= service.created_at.strftime("%d de %B del %Y") %></strong></p>
        </div>
        <div class="card card-body"  style="background-color: white;">
          <div class="row d-flex justify-content-between align-items-center">
            <div class="col-3 d-flex justify-content-center align-items-center">
              <%= cl_image_tag service.photo.key, height: 200, width: 200, crop: :fill %>
            </div>
            <div class="col-9 d-flex flex-column justify-content-center">
              <p>"<%= service.description %>"</p>
              <p><strong >Price per day:</strong> $<%= service.price %></p>
              <p><strong ><i class="fa-solid fa-location-dot"></i>&nbsp; The address where you will provide the service in: </strong><%= service.address %></p>
              <p><strong><i class="fa-solid fa-notdef"></i>&nbsp; Your restrictions as a caregiver:</strong>&nbsp; <%= service.restrictions %></p>
              <p><strong><i class="fa-solid fa-house"></i>&nbsp; Your place description:</strong>&nbsp; <%= service.house_description %> </p>
              <div class="d-flex">
                <%= link_to edit_service_path(service), class: 'px-3 me-2', style: 'color: #FD8522; font-size: 24px;' do %>
                  <i class="fa-solid fa-pen-to-square"></i>
                <% end %>

                <%= link_to service, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'px-3', style: 'color: #FD8522; font-size: 24px;'  do %>
                  <i class="fa-solid fa-trash"></i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="text-center my-4">
      <%= link_to new_service_path, class: 'mt-3 btn text-white rounded-pill px-4 py-2', style: "background-color: #FD8522;" do %>
        <i class="fa-solid fa-plus"></i> Add New Service
      <% end %>
    </div>
  </div>
</div>

<div class="bg-white">
  <div class="container pb-5">
    <h1 class="text-center mb-4">My hired services</h1>

    <% @bookings.reverse.each do |booking| %>
      <div class="card-custom card bg-white shadow-lg mb-3">
        <div class="card card-body" style="background-color: white;">
          <p class="m-0"><strong style="color: #FD8522"><%= booking.created_at.strftime("%d de %B del %Y") %></strong></p>
        </div>
        <div class="card card-body"  style="background-color: white;">
          <div class="row d-flex justify-content-between align-items-center">
            <div class="col-3 d-flex justify-content-center align-items-center">
              <%= cl_image_tag booking.service.photo.key, height: 200, width: 200, crop: :fill %>
            </div>
            <div class="col-9 d-flex flex-column justify-content-center">
              <p><strong><i class="fa-regular fa-user"></i>&nbsp; Hired by:</strong> <%= booking.pet.user.first_name %> <%= booking.pet.user.last_name %></p>
              <p><strong><i class="fa-solid fa-paw"></i>&nbsp; To take care of:</strong> <%= booking.pet.name %> (<%= booking.pet.specie %>)</p>
              <p>"<%= booking.pet.description %>"</p>
              <p><strong ><i class="fa-regular fa-calendar"></i>&nbsp; From:</strong> <%= booking.start_date.strftime("%d de %B del %Y") %><strong >&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; To:</strong> <%= booking.end_date.strftime("%d de %B del %Y") %></p>
              <p><strong >Price per day:</strong> $<%= booking.service.price %></p>
              <p><strong ><i class="fa-solid fa-location-dot"></i>&nbsp; The address where you will provide the service in is: </strong><%= booking.service.address %></p>
              <p>"<%= booking.message %>"</p>
              <p><strong>The service is </strong>
                <strong class="<%= booking.status ? 'text-success' : 'text-warning' %>">
                  <%= booking.status ? 'CONFIRMED' : 'PENDING' %>
                </strong>
              </p>
              <% unless booking.status %>
                <div class="d-flex">
                  <%= button_to 'Confirm Booking', accept_booking_path(booking), method: :patch, class: 'btn btn-success rounded-pill px-4 py-2 text-white' %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  </div>
</div>
